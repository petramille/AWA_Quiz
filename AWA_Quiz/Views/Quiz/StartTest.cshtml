@model AWA_Quiz.Models.QuizViewModel

@{
    ViewBag.Title = "StartTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h4>Possible tests to take</h4>
</div>

@using (Html.BeginForm())
{
    

        <div class="form-group">
            @using (Html.BeginForm("StartTest", "Quiz", FormMethod.Post))
            {
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Start test" class="btn btn-default" />
                </div>
            }
        </div>
        <div class="form-group">
            @using (Html.BeginForm("Index", "Quiz", FormMethod.Post))
            {
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cancel" class="btn btn-default" />
                </div>
            }
        </div>
}
